# Server Configuration
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CHANNEL_ID=your_channel_id_here

# Google OAuth (for YouTube uploads)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Social Media Platform APIs
INSTAGRAM_ACCESS_TOKEN=your_instagram_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_account_id

TIKTOK_ACCESS_TOKEN=your_tiktok_token
TIKTOK_OPEN_ID=your_tiktok_open_id

FACEBOOK_ACCESS_TOKEN=your_facebook_token
FACEBOOK_PAGE_ID=your_facebook_page_id

LINKEDIN_ACCESS_TOKEN=your_linkedin_token
LINKEDIN_PERSON_URN=your_linkedin_person_urn

# Text-to-Speech Configuration
TTS_PROVIDER=openai
ELEVENLABS_API_KEY=your_elevenlabs_key
ELEVENLABS_VOICE_ID=your_voice_id

# Cron Schedule (minute hour day month weekday)
TREND_DISCOVERY_CRON=0 */6 * * *
CONTENT_GENERATION_CRON=0 8 * * *
POSTING_CRON=0 10 * * *

# Content Configuration
MIN_VIDEO_DURATION=60
MAX_VIDEO_DURATION=600
TARGET_AUDIENCE=general
CONTENT_NICHE=technology

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# n8n Webhook (optional)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/content-ready
N8N_ENABLED=false
